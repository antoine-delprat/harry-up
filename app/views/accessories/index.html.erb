
<form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>



<div class="cards-accessory">
  <% @accessories.each do |accessory| %>
    <%= link_to accessory_path(accessory) do %>
        <%= cl_image_tag accessory.photo.key, height: 300, width: 400, crop: :fill %>
            <div class="card-product-infos">
              <h2><%= accessory.name %></h2>
              <h6><%= accessory.price_per_day %> $</h6>
          </div>
    <% end %>
  <% end %>
</div>
